{
  "name": "debian-development-stack-installer",
  "version": "4.0.0",
  "description": "SSH-based development stack installer for Debian hosts (Node.js, Nginx, tools, SSL)",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "cli": "node index.js",
    "build": "electron-builder --win",
    "dist": "electron-builder --win --publish=never"
  },
  "dependencies": {
    "argon2-browser": "^1.18.0",
    "ppk-to-openssh": "^3.2.0",
    "ssh2": "^1.15.0",
    "sshpk": "^1.18.0"
  },
  "devDependencies": {
    "electron": "25.9.8",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.debian.nodejs.installer",
    "productName": "Debian Development Stack Installer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.md",
      "!docs/**/*",
      "!.env*",
      "!scripts/**/*"
    ],
    "asarUnpack": [
      "node_modules/argon2-browser/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "keywords": [
    "ssh",
    "nodejs",
    "nginx",
    "letsencrypt",
    "debian",
    "installer",
    "automation",
    "electron",
    "gui",
    "ssl",
    "development-stack"
  ],
  "author": "",
  "license": "0BSD"
}
